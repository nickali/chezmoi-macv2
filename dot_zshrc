# ===========================
# Autoloads and Initializations
# ===========================

autoload throw catch

# ===========================
# Starship prompt
# ===========================
# Enable async rendering for better performance
export STARSHIP_PROMPT_ASYNC=true
eval "$(starship init zsh)"

# ===========================
# Autoloads and Initializations
# ===========================
autoload throw catch

# ===========================
# FZF
# ===========================
# Suppress ZLE option errors from FZF
eval "$(fzf --zsh)" 2>/dev/null
alias fzfpreview="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"

## Use FZF to search zsh history
fh() {
    eval $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed 's/ *[0-9]* *//')
}

# ===========================
# Zoxide Custom Functions
# ===========================
# https://github.com/anthropics/claude-code/issues/2632#issuecomment-3024225046
if [ -z "$DISABLE_ZOXIDE" ]; then
    eval "$(zoxide init --cmd cd zsh)"
fi

# ===========================
# MISE
# ===========================
eval "$(/Users/nali/.local/bin/mise activate zsh)"
export PATH="$PATH:$HOME/.local/share/mise/installs/go/latest/bin"

# ===========================
# ssh with certs
# ===========================
alias ssh='/Users/nali/bin/ssh-with-cert'
alias oldssh='/usr/bin/ssh'  # backup for emergencies

eval "$(mcfly init zsh)"

# ===========================
# Load Additional Configurations
# ===========================
source ~/.zshrc_extra


# >>> b2 autocomplete >>>
# This section is managed by b2 . Manual edit may break automated updates.
if [[ -z "$_comps" ]] && [[ -t 0 ]]; then autoload -Uz compinit && compinit -i -D; fi
    source /Users/nali/.zsh/completion/_b2
